<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_linear_layout_id_sudocRecordDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="#eee"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal" >

 	<Button
        android:id="@+id/buttonprev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigationpreviousitem" />

    <TextView
        android:id="@+id/textViewPrecedent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dip"
        android:text="@string/RechercheSudocPrecedent"
        android:textSize="12dip" />

    
    <TextView
        android:id="@+id/textViewSuivant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="7dip"
        android:text="@string/RechercheSudocSuivant"
        android:textSize="12dip" />
    
    <Button
        android:id="@+id/buttonnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigationnextitem" />
    


</LinearLayout>